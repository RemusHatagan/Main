grade = "invalid"
if marks >= 75:
  grade = "A"
  print("You got an A in your test!")
elif marks >= 60:
  grade = "B"
  print("You got a B in your test!")
elif marks >= 35:
  grade = "C"
  print("You got a C in your test!")
elif marks <35:
  grade = "D"
  print("You got a D in your test!")


